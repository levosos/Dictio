doctype html
ul.dropdown-content#menu
    li
        a(href='#/logout')
            i.material-icons.waves-effect.waves-light close
            | Log out
.navbar-fixed
    nav
        .nav-wrapper
            a.brand-logo.dictio-tm(href='#', style='margin-left: 10px; font-size: 42px') Dictio
            i.material-icons.dropdown-button.waves-effect.waves-light.right(
                '*ngIf'='tokenService.isLoggedIn()'
                materialize='dropdown' 
                data-activates='menu'
                ) more_vert
            .input-field.right('*ngIf'='filterState !== FilterState.Hidden')
                input#pattern(
                    '[disabled]'='filterState === FilterState.Disabled'
                    type='search'
                    '#pattern'
                    '(input)'='filter($event.target.value)'
                    placeholder='Filter'
                )
                label.label-icon(for='pattern')
                    i.material-icons search
                i.material-icons('(click)'='pattern.value=\'\'; filter(\'\');') close