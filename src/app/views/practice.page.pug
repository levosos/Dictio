.container
    .progress('*ngIf'='!challenge')
        .indeterminate
    div('*ngIf'='challenge' style='margin-top: 30px')
        md-button-toggle-group(
            '#language'='mdButtonToggleGroup' 
            '[value]'='Language.Spanish'
            )
            md-button-toggle('[value]'='Language.Spanish') 
                span.dictio-font(style="font-size: 24px") &aacute;
            md-button-toggle('[value]'="Language.English")
                span.dictio-font(style="font-size: 24px") a
        .card.yellow.lighten-4.z-depth-2(
            '(click)'='next()'
            )
            .card-content.dictio-font(style='font-size: 28px')
                .blue-text.text-darken-4(style='font-size: 14px') {{challenge.description}}
                div 
                    | {{language.value == Language.Spanish ? challenge.spanish : challenge.english}}
                    i.material-icons.grey-text.right(style='font-size: 36px' '(click)'='help = !help; $event.stopPropagation();') {{help ? 'help' : 'help_outline'}}
                .grey-text('*ngIf'='help') {{language.value == Language.Spanish ? challenge.english : challenge.spanish}}
        blockquote Click on the card to proceed